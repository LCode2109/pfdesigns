<div id="index">
  <section id="headline-cover">
    <div class="container">
      <div class="row">
        <div class="col-md-6">
          <h1 class="headline-text"  data-aos="fade-up-right">
            The best interface for your startup & small business.
          </h1>

          <p class="subheading-text"  data-aos="fade-up-right">
            StartKit is an aesthetically designed template best suited for SaaS products, mobile & web application and small businesses.
          </p>

          <div class="buttons-container" data-aos="fade-up-right">
            <a href="#"  data-toggle="modal" data-target="#purchaseModal" class="btn btn-lg btn-primary btn-round btn-main-cta">
              Create your account
            </a>

            <span class="or">or</span>

            <a href="<%= page_path("features") %>" class="btn btn-link">
              Take a tour &rarr;
            </a>
          </div>
        </div>

        <div class="col-md-6 hidden-sm hidden-xs" data-aos="fade-up-left">
          <img class="img-responsive main-img" src="/assets/display/mockup-4.png" alt="">
        </div>
      </div>


    </div>

  </section>


  <%= render "shared/partials/horizontal_features" %>

  <section id="features">
    <div class="container">
      <div class="row">
        <div class="col-md-12 text-center">
          <h2>Do you want to get your website up and running quickly?</h2>
          <p class="lead">Purchase this template and create your beautiful website easily</p>
        </div>
      </div>
    </div>

    <%= render "shared/partials/single_features" %>
  </section>

  <section id="highlight-cta" data-aos="fade-up">
    <div class="container">
      <div class="row">

        <div class="col-md-8 col-md-offset-2 text text-center">
          <h2>
            Ready to create your website?
          </h2>

          <p class="lead">
            Lorem ipsum dolor sit amet, consectetur adipisicing elit. Consequuntur, reiciendis vel quisquam consectetur fuga qui aperiam iste.
          </p>

          <a href="#" data-toggle="modal" data-target="#purchaseModal" class="btn btn-lg btn-primary btn-round">
            Purchase Now
            &rarr;
          </a>
        </div>
      </div>
    </div>
  </section>


  <%= render "shared/partials/testimonials" %>


  <section id="company-slider" data-aos="fade-up">
    <div class="container">
      <div class="row">
        <div class="col-md-12">

          <%= render "shared/partials/logo_slider" %>

          <div class="row">
            <div class="col-md-12 text-center">
              <a href="#" class='btn btn-bordered btn-lg btn-round btn-primary'>
                Read more testimonials &rarr;
              </a>
            </div>
          </div>

        </div>
      </div>
    </div>

  </section>


  <section id="pricing-table"  data-aos="fade-up">
    <div class="container">
      <div class="row">
        <div class="col-md-12 text-center">
          <h2>Simple, honest pricing. No hidden fees.</h2>
          <p class="lead">
            No long term contracts. Change your plan at any time.
          </p>
        </div>
      </div>

      <%= render "shared/partials/pricing_table" %>

      <div class="row call-us">
        <div class="col-md-12">
          <div class="additional-header">
            <h3><i class="fa fa-phone"></i> Need help choosing a plan?</h3>
          </div>

          <div class="text">
            <p class="lead">
              Not sure of which plan to choose? Give us a call at <strong>456-121-1212</strong> and our dedicated support staff will help you figure out the best plan for you.
            </p>
          </div>
        </div>
      </div>



    </div>
  </section>



  <div id="feature-boxed" data-aos="fade-up">
    <div class="container">
      <div class="row">
        <div class="col-md-12 text-center">
          <div class="heading">
            <h2>
              Everything you need to launch your startup <br>

              <small>
                Get yourself ahead with this beautiful template.
              </small>
            </h2>
          </div>

        </div>
      </div>


      <%= render "shared/partials/boxed_features_list" %>

      <div class="row">
        <div class="col-md-4 col-md-offset-4">
          <div class="text-center">

            <a href="#" class="btn btn-lg btn-block btn-primary btn-round btn-main-cta">
              <i class="material-icons">add_shopping_cart</i>
              Purchase Now
            </a>

          </div>
        </div>
      </div>

    </div>
  </div>



</div>
